
<div class="col-lg-12">
	<div class="col-lg-7">
		<h2>Some nice quotes:</h2>

		<div ng-repeat="quote in index.quotesList track by quote._id" class="animate-repeat">
			<button class="btn btn-danger pull-right" type="submit" ng-click="index.removeQuote(quote._id)" style="position:relative;top:18px">
				<span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
			</button>			
		
			<blockquote data-id="{{quote._id}}">
				{{ quote.body }}
			
			<br/>
			- <span title="{{quote.author}}">{{ quote.author }}</span>, {{ quote.date | date }}
			</blockquote>
			<hr></hr>
		</div>
	</div>

	<div class="col-lg-5">
		<h3>Add your own quote</h3>
		<form ng-submit="index.submitQuote()">
			<div class="form-group">
				<label for="quote">Quote:</label>
				<input ng-model="index.form.quote" class="form-control" name="quote" type="text" placeholder="Something inspirational!" required></input>
			</div>
			<div class="form-group">
				<label for="author">Author:</label>
				<input ng-model="index.form.author" class="form-control" name="author" type="text" placeholder="Said by someone cool." required></input>
			</div>
			<button class="btn btn-default" type="submit">
				<span ng-if="!index.busy">
					<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
					Submit					
				</span>
				<span ng-if="index.busy"><img src="images/loading.gif" /></span>
			</button>
		</form>
		
		<hr></hr>
		
		<button class="btn btn-info" ng-click="index.getQuotes()">
			<span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
			Refresh
		</button>
		<button class="btn btn-warning" ng-click="index.quotesList = []">
			<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
			Clear cache
		</button>		
	</div>
</div>